{# templates/base.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default('My Application') }}</title>
    <link href="./css/output.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
<header class="bg-blue-500 text-white p-4">
    <h1 class="text-xl">My Application</h1>
    <nav>
        <ul class="flex space-x-4">
            <li><a href="/" class="hover:underline">Home</a></li>
            <li><a href="/users" class="hover:underline">Users</a></li>
            <li><a href="/posts" class="hover:underline">Posts</a></li>
        </ul>
    </nav>
</header>

<div class="flex">
    {# Left Sidebar #}
    <aside class="w-1/4 bg-gray-200 p-4">
        <ul>
            <li><a href="/users" class="block py-2 hover:bg-gray-300">User Management</a></li>
            <li><a href="/posts" class="block py-2 hover:bg-gray-300">Post Management</a></li>
        </ul>
    </aside>

    {# Main Content #}
    <main class="w-3/4 p-4">
        {% block content %}{% endblock %}
    </main>
</div>

<footer class="bg-gray-800 text-white text-center p-4">
    <p>&copy; {{ "now"|date("Y") }} My Application. All rights reserved.</p>
</footer>
</body>
</html>
