{# templates/user_index.twig #}
{% extends 'base.twig' %}

{% block content %}
    <h2 class="text-2xl mb-4">User Management</h2>

    <table class="min-w-full bg-white border">
        <thead>
        <tr>
            <th class="py-2 px-4 border-b">ID</th>
            <th class="py-2 px-4 border-b">Name</th>
            <th class="py-2 px-4 border-b">Email</th>
            <th class="py-2 px-4 border-b">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="py-2 px-4 border-b">{{ user.id }}</td>
                <td class="py-2 px-4 border-b">{{ user.username }}</td>
                <td class="py-2 px-4 border-b">{{ user.email }}</td>
                <td class="py-2 px-4 border-b flex space-x-2">
                    <a href="/users/edit/{{ user.id }}" class="text-blue-500 hover:underline">Edit</a> |

                    <!-- 삭제 버튼 -->
                    <form action="/users/delete/{{ user.id }}" method="POST" class="inline">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit"
                                onclick="return confirm('Are you sure you want to delete this user?');"
                                class="text-red-500 hover:text-red-700 hover:underline focus:outline-none">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <div class="mt-4">
        <a href="/users/create" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Add New User</a>
    </div>
{% endblock %}
